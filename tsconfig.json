{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@users/*": [
        "src/core/users/*"
      ],
      "@blogs/*": [
        "src/core/blogs/*"
      ],
      "@notifications/*": [
        "src/core/notifications/*"
      ],
      "@auth/*": [
        "src/core/auth/*"
      ],
      "@constants/": [
        "src/constants/index"
      ],
      "@helpers/": [
        "src/helpers/index"
      ],
      "@entities/*": [
        "src/models/entities/*"
      ],
    }
  }
}